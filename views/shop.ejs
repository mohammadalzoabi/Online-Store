<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    
</head>

<body>
    <%- include('includes/navigation.ejs') %>


    <main>
        <% if (prods.length > 0) { %>
            <div class = "grid">
                <% for (let prod of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"> <%= prod.title %> </h1>
                        </header>
                        <div class="card__image">
                            <img src="https://media.gq.com/photos/5ad64204c8be07604e8b5f2f/1:1/w_1332,h_1332,c_limit/21-books-GQ-April-2018-041718-3x2.jpg" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">sub2pewds</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                    <% } %>
            </div>
        <% } else { %>
            <h1>No Products.</h1>
        <% } %>
    </main>


<%- include('includes/end.ejs') %>