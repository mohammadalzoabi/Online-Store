extends layouts/main-layout.pug

block styles
    link(rel='stylesheet' href='/css/product.css')

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}

                        div.card__image
                            img(src="https://media.gq.com/photos/5ad64204c8be07604e8b5f2f/1:1/w_1332,h_1332,c_limit/21-books-GQ-April-2018-041718-3x2.jpg", alt="A Book") 

                        div.card__content
                            h2.classproduct__price $19.99
                            p.product__description i have no clue man

                        .card__actions
                            button.btn Add to cart
        else
            h1 No Products